{
    "manifest_version": 2,

    "version": "22.08.1",
    "name": "Invisible Voice",
    "description": "This extension boycotts a website",

    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "https://invisible-voice.com/*",
        "https://test.reveb.la/*",
        "unlimitedStorage"
    ],

    "browser_action": {
    	"default_icon": "icon48.png",
	"default_title": "invisible voice",
	"default_popup": "options.html",
	"browser_style": true
    },

    "icons": {
        "16" : "icon16.png",
        "24" : "icon24.png",
        "48" : "icon48.png",
        "96" : "icon96.png"
    },

    "web_accessible_resources": ["logo.svg"],

    "options_ui": {
        "page": "options.html"
    },

    "content_scripts": [{
	"matches": ["<all_urls>"],
        "js": ["InvisibleVoice.js"],
	"run_at": "document_start"
    }]

}
