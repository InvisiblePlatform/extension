{
    "manifest_version": 2,

    "version": "1.0",
    "name": "AphonicAdvert",
    "description": "This extension censors a website",

    "permissions": [
        "tabs"
    ],

    "web_accessible_resources": [
        "along.html"
    ],
    
    "icons": {
    	"48": "icons/border-48.png"
    },

    "content_scripts": [{
	"matches": ["<all_urls>"],
        "js": ["AphonicAdvert.js"],
	"run_at": "document_start"
    }]

}
