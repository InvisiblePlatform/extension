{
    "manifest_version": 3,

    "version": "22.6.12",
    "name": "Invisible Voice",
    "description": "This extension boycotts a website",

    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "unlimitedStorage"
    ],
    "host_permissions":[
        "https://invisible-voice.com/*",
        "https://test.reveb.la/*",
        "https://assets.reveb.la/*"
    ],
    "optional_host_permissions": [
    	"*://*/*"
    ],

    "action": {
    	"default_icon": "icon128.png",
	"default_title": "invisible voice",
    	"default_icons": {
    	    "16" : "icon16.png",
    	    "24" : "icon24.png",
    	    "32" : "icon32.png",
    	    "48" : "icon48.png",
    	    "96" : "icon96.png",
    	    "128" : "icon128.png"
    	},
	"browser_style": true,
	"default_popup": "popup.html"
    },

    	"icons": {
    	    "16" : "icon16.png",
    	    "24" : "icon24.png",
    	    "32" : "icon32.png",
    	    "48" : "icon48.png",
    	    "96" : "icon96.png",
    	    "128" : "icon128.png"
    	},


    "web_accessible_resources": [
	    {"resources":["replacements.json"],"matches":["<all_urls>"]},
	    {"resources":["sitetohash.json"],"matches":["<all_urls>"]},
	    {"resources":["hashtosite.json"],"matches":["<all_urls>"]},
	    {"resources":["blocked.html"],"matches":["<all_urls>"]},
	    {"resources":["logoShow.png"],"matches":["<all_urls>"]},
	    {"resources":["button.svg"],"matches":["<all_urls>"]}
    ],

    "background":{
    	"service_worker": "background.js",
        "persistant": false
    },

    "content_scripts": [{
	    "matches": ["<all_urls>"],
        "js": ["InvisibleVoice.js"],
	    "run_at": "document_start"
    }]

}
